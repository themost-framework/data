    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/jasmine/bin/jasmine",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test (v8)",
            "runtimeVersion": "8.17.0",
            "runtimeArgs": [
                "--experimental-modules"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/jasmine/bin/jasmine",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test (v12)",
            "runtimeVersion": "12.22.7",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/node_modules/jasmine/bin/jasmine",
            "console": "integratedTerminal"
        }
    ]
}