{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": false,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "lib": [
        "es2015",
        "es2016",
        "es2017",
        "dom"
        ],
    "paths": {
      "@themost/data/platform-server": [
        "./platform-server/index"
      ],
      "@themost/data": [
        "./index"
      ]
    }
  },
  "exclude": [
      "node_modules"
      ]
}
