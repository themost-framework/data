{
    "$schema": "https://themost-framework.github.io/themost/models/2018/2/schema.json",
    "@id": "https://themost.io/schemas/User",
    "name": "User",
    "description": "Users",
    "title": "User",
    "abstract": false,
    "sealed": false,
    "inherits": "Account",
    "version": "2.1.0",
    "fields": [
        {
            "@id": "https://themost.io/schemas/lockoutTime",
            "name": "lockoutTime",
            "title": "lockoutTime",
            "description": "The date and time that this account was locked out.",
            "type": "DateTime"
        },
        {
            "@id": "https://themost.io/schemas/logonCount",
            "name": "logonCount",
            "title": "logonCount",
            "description": "The number of times the account has successfully logged on.",
            "type": "Integer"
        },
        {
            "@id": "https://themost.io/schemas/enabled",
            "name": "enabled",
            "title": "enabled",
            "description": "Indicates whether a user is enabled or not.",
            "type": "Boolean",
            "value": "javascript:return true;"
        },
        {
            "@id": "https://themost.io/schemas/lastLogon",
            "name": "lastLogon",
            "title": "lastLogon",
            "description": "The last time and date the user logged on.",
            "type": "DateTime"
        },
        {
            "@id": "https://themost.io/schemas/groups",
            "name": "groups",
            "title": "Groups",
            "description": "A collection of groups where user belongs.",
            "type": "Group",
            "mapping": {
                "associationAdapter":"GroupMembers",
                "parentModel":"Group",
                "parentField":"id",
                "childModel":"User",
                "childField":"id",
                "associationType":"junction",
                "cascade":"delete",
                "privileges": [
                    {
                        "mask": 15,
                        "type": "global"
                    },
                    {
                        "mask": 15,
                        "type": "global",
                        "account": "Administrators"
                    },
                    {
                        "type": "self",
                        "mask": 1,
                        "filter": "valueId eq me()"
                    }
                ]
            }
        },
        {
            "@id": "https://themost.io/schemas/userFlags",
            "name": "userFlags",
            "title": "userFlags",
            "description": "This field contains additional user flags.",
            "type": "Integer"
        },
        {
            "@id": "https://themost.io/schemas/tags",
            "name": "tags",
            "type": "Text",
            "many": true,
            "size": 64,
            "mapping": {
                "associationAdapter": "UserTags",
                "associationObjectField": "user",
                "associationValueField": "tag",
                "privileges": [
                    {
                        "mask": 15,
                        "type": "global"
                    },
                    {
                        "mask": 15,
                        "type": "global",
                        "account": "Administrators"
                    },
                    {
                        "mask": 1,
                        "type": "self",
                        "filter": "user eq me()"
                    }
                ]
            }
        },
        {
            "@id": "https://themost.io/schemas/userReviews",
            "name": "userReviews",
            "type": "UserReview"
        },
        {
          "@id": "https://themost.io/schemas/metadata",
          "many": false,
          "description": "A JSON object that contains additional metadata for the user.",
          "name": "metadata",
          "type": "Json"
        }
    ],
    "privileges": [
        {
            "mask": 15,
            "type": "global"
        },
        {
            "mask": 15,
            "type": "global",
            "account": "Administrators"
        },
        {
            "mask": 1,
            "type": "global",
            "account": "Contributors"
        },
        {
            "mask": 1,
            "type": "self",
            "filter": "id eq me()"
        }
    ],
    "seed": [
        {
            "name": "anonymous",
            "description": "Anonymous User",
            "groups": [
                {
                    "name": "Guests"
                }
            ]
        }
    ]
}
